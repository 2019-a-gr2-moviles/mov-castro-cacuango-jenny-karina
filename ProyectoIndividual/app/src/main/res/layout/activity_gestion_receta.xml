<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground2"
        tools:context=".GestionRecetas">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="388dp"
            android:background="#FDFCFC"
            android:layout_height="699dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.49">

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="359dp"
                android:layout_height="254dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:id="@+id/rv_disponibles"
                app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="0.384"/>
        <TextView
                android:text="@string/txtPlatosDisponibles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="44dp" android:textStyle="bold|italic" android:textAllCaps="true"
                android:textAlignment="center" android:textSize="18sp" app:layout_constraintHorizontal_bias="0.503"/>
        <TextView
                android:text="@string/txtPlatosSeleccionados"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/textView5" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_disponibles" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:textStyle="bold|italic" android:textAllCaps="true"
                android:textSize="14sp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="344dp"
                android:layout_height="211dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rv_seleccionados" app:layout_constraintHorizontal_bias="0.611"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>