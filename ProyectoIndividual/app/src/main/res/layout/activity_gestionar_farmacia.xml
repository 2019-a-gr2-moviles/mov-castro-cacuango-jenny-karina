<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A4470"
        tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="380dp"
            android:layout_height="678dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintStart_toStartOf="parent"
            android:background="#FDFCFC"

            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.49">

        <ImageView
                android:layout_width="307dp"
                android:layout_height="101dp" app:srcCompat="@drawable/farmazul"
                android:id="@+id/imageView" android:layout_marginTop="68dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/txtAdminPlatos"
                android:layout_width="246dp"
                android:layout_height="66dp"
                android:background="#D5D2D2"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/btn_gestMedicamento"
                app:layout_constraintHorizontal_bias="0.474" android:textStyle="bold" android:textAllCaps="true"
                android:textAlignment="center" android:textSize="18sp"/>
        <Button
                android:text="@string/txtAdminCombos"
                android:layout_width="243dp"
                android:layout_height="68dp"
                android:background="#D5D2D2"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:id="@+id/btn_gestReceta"
                app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="56dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_gestMedicamento" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center"
                android:textSize="18sp"/>
        <ImageView
                android:layout_width="363dp"
                android:layout_height="338dp" app:srcCompat="@drawable/captura"
                android:id="@+id/imageView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="372dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>