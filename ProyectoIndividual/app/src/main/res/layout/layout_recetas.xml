<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/layout_combo">
    <TextView
            android:text="TextView"
            android:layout_width="84dp"
            android:layout_height="36dp"

            android:background="#FDFCFC"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtr_nombre"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center_vertical"/>

    <TextView
            android:text="TextView"
            android:layout_width="93dp"
            android:layout_height="37dp"
            android:gravity="center_vertical"
            android:background="#FDFCFC"

            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txt_identificacion"
            app:layout_constraintStart_toEndOf="@+id/txtc_apellido"/>
    <TextView
            android:text="TextView"
            android:layout_width="85dp"
            android:layout_height="37dp"
            android:gravity="center_vertical"
            android:background="#FDFCFC"

            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtc_apellido"
            app:layout_constraintStart_toEndOf="@+id/txtr_nombre"/>
    <ImageButton
            android:layout_width="26dp"
            android:layout_height="39dp" app:srcCompat="@drawable/delete2"
            android:id="@+id/btn_eliminarReceta"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_identificacion" android:backgroundTint="#FDFCFC"
    />
    <ImageButton
            android:layout_width="29dp"
            android:layout_height="39dp" app:srcCompat="@drawable/file"
            android:id="@+id/btn_editarReceta" app:layout_constraintStart_toEndOf="@+id/btn_eliminarReceta"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#FDFCFC"
    />
    <ImageButton
            android:layout_width="33dp"
            android:layout_height="40dp" app:srcCompat="@drawable/eye"
            android:id="@+id/btn_verReceta" app:layout_constraintStart_toEndOf="@+id/btn_editarReceta"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#FDFCFC"
    />

</androidx.constraintlayout.widget.ConstraintLayout>