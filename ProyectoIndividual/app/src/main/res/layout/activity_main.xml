<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A4470"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="372dp"
            android:layout_height="674dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintStart_toStartOf="parent"
            android:background="#FDFCFC"

            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.49">
        <ImageView
                android:layout_width="325dp"
                android:layout_height="105dp" app:srcCompat="@drawable/farmazul"
                android:id="@+id/imageView2" android:layout_marginTop="84dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"

                android:layout_marginEnd="8dp"/>
        <Button
                android:text="@string/verMenu"
                android:layout_width="283dp"
                android:layout_height="94dp"
                android:id="@+id/btn_catalogo" android:layout_marginTop="52dp"
                android:background="#D5D2D2"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.506" android:textStyle="bold"
                android:textAllCaps="true" android:textAlignment="center" android:textSize="18sp"
                android:drawableLeft="@drawable/magazine"/>
        <Button
                android:text="@string/soyAdministrador"
                android:layout_width="290dp"
                android:layout_height="82dp"
                android:background="#D5D2D2"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:id="@+id/btn_gestFarmacia"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold" android:textAllCaps="true" android:textAlignment="center"
                android:textSize="18sp" android:drawableLeft="@drawable/calendar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_catalogo" app:layout_constraintVertical_bias="0.032"/>
        <ImageView
                android:layout_width="365dp"
                android:layout_height="354dp" app:srcCompat="@drawable/captura"
                android:id="@+id/imageView5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="380dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.444"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>