<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/layout_menu">

    <TextView
            android:text="TextView"
            android:layout_width="84dp"
            android:layout_height="34dp"
            android:id="@+id/txt_nombreMedicina" app:layout_constraintTop_toTopOf="parent"
            android:background="#FDFCFC"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="141dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:background="#FDFCFC"
            android:id="@+id/txt_tipoMedicina" app:layout_constraintStart_toEndOf="@+id/txt_nombreMedicina"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="TextView"
            android:layout_width="70dp"
            android:layout_height="32dp"
            android:background="#FDFCFC"
            android:gravity="center"
            android:id="@+id/txt_precioMedicina" app:layout_constraintStart_toEndOf="@+id/txt_tipoMedicina"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <ImageButton
            android:layout_width="48dp"
            android:layout_height="34dp" app:srcCompat="@drawable/delete2"
            android:id="@+id/btn_eliminarMed" app:layout_constraintStart_toEndOf="@+id/txt_precioMedicina"
            app:layout_constraintTop_toTopOf="parent" android:backgroundTint="#FDFCFC"/>
</androidx.constraintlayout.widget.ConstraintLayout>