<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="287dp"
            android:layout_height="29dp"
            android:text="Bandeja de Entrada"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp" android:textStyle="bold" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintVertical_bias="0.0" android:textSize="24sp" android:gravity="center"
            android:id="@+id/textView"/>
    <Button
            android:text="INGRESAR"
            android:layout_width="267dp"
            android:layout_height="203dp"
            android:id="@+id/btn_ingresar"
            android:drawableBottom="@mipmap/outlook" android:textStyle="bold"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.509"/>
    <TextView
            android:text="Ya sea para hacer el seguimiento de su bandeja de entrada o para programar el próximo evento, Outlook le permite estar conectado y ser más productivo y organizado en el trabajo, en casa y en cualquier otro lugar."
            android:layout_width="318dp"
            android:layout_height="147dp"
            android:id="@+id/textView2" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/textView" app:layout_constraintHorizontal_bias="0.612"
            android:textSize="18sp" android:gravity="center"/>

</android.support.constraint.ConstraintLayout>