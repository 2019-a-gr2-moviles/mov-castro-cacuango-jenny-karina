<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VerMensaje" android:background="#FFFFFF">

    <TextView
            android:text="TextView"
            android:layout_width="402dp"
            android:layout_height="121dp"
            android:id="@+id/txt_cabecera" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.001" android:background="#F3F2F1" android:gravity="center"
            android:textColor="#000000"/>
    <TextView
            android:text="TextView"
            android:layout_width="311dp"
            android:layout_height="33dp"
            android:id="@+id/txt_nombre1"
            app:layout_constraintEnd_toEndOf="@+id/txt_cabecera" app:layout_constraintTop_toBottomOf="@+id/txt_cabecera"
            android:layout_marginTop="8dp" android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
            android:textStyle="bold" android:textColor="#000000" android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="309dp"
            android:layout_height="35dp"
            android:id="@+id/txt_contenido" app:layout_constraintEnd_toEndOf="@+id/txt_nombre1"
            app:layout_constraintStart_toStartOf="@+id/txt_nombre1"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombre1"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="77dp"
            android:layout_height="57dp" app:srcCompat="@mipmap/icon1"
            android:id="@+id/img_icon"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_cabecera"
            app:layout_constraintEnd_toStartOf="@+id/txt_nombre1" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="404dp"
            android:layout_height="510dp" app:srcCompat="@mipmap/icon3"
            android:id="@+id/img_anuncio" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_contenido" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>