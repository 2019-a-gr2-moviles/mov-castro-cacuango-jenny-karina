<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/RelativeLayout" android:background="#FFFFFF">

    <ImageView
            android:layout_width="69dp"
            android:layout_height="64dp" app:srcCompat="@mipmap/icon1" android:id="@+id/img_foto"
            android:layout_weight="1" android:layout_marginTop="15dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="313dp"
            android:layout_height="wrap_content" android:id="@+id/txt_nombre" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="4dp" android:layout_marginEnd="4dp"
            android:layout_alignParentStart="true" android:layout_marginLeft="94dp" android:layout_marginStart="94dp"
            android:layout_alignParentLeft="true" android:layout_marginTop="16dp" android:layout_alignParentTop="true"
            android:textStyle="bold"/>
    <TextView
            android:text="TextView"
            android:layout_width="281dp"
            android:layout_height="32dp" android:id="@+id/txt_description"
            android:layout_alignRight="@+id/txt_nombre" android:layout_marginRight="-6dp"
            android:layout_marginEnd="-6dp" android:layout_alignEnd="@+id/txt_nombre"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/txt_nombre" android:background="#FFFFFF" android:layout_marginLeft="-1dp"
            android:layout_marginStart="-1dp" android:layout_alignLeft="@+id/txt_nombre"
            android:layout_alignStart="@+id/txt_nombre" android:textStyle="bold" android:textColor="#0078D4"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp" android:id="@+id/txt_chat"
            android:layout_alignRight="@+id/txt_description" android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" android:layout_alignEnd="@+id/txt_description"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp"
            android:layout_alignLeft="@+id/txt_description" android:layout_alignStart="@+id/txt_description"
            android:layout_marginTop="5dp" android:layout_below="@+id/txt_description"/>

    <view
        class="android.view.View"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#E6E4E2"/>
</RelativeLayout>
