<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".crearPeliculas">

    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombrePelicula" android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.488"
            android:hint="@string/txt_nombrePelicula"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_anioLanzamiento"
            android:hint="@string/txt_anioLanzamiento"
            app:layout_constraintStart_toStartOf="@+id/txt_nombrePelicula"
            app:layout_constraintEnd_toEndOf="@+id/txt_nombrePelicula" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombrePelicula" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="37dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_rating"
            android:hint="@string/txt_rating"
            app:layout_constraintStart_toStartOf="@+id/txt_anioLanzamiento"
            app:layout_constraintEnd_toEndOf="@+id/txt_anioLanzamiento" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/txt_anioLanzamiento"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_actoresPrincipales"
            android:hint="@string/txt_actoresPrincipales"
            app:layout_constraintStart_toStartOf="@+id/txt_rating" app:layout_constraintEnd_toEndOf="@+id/txt_rating"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_rating"/>
    <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_sinopsis"
            android:hint="@string/txt_sinopsis"
            app:layout_constraintStart_toStartOf="@+id/txt_actoresPrincipales"
            app:layout_constraintEnd_toEndOf="@+id/txt_actoresPrincipales" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_actoresPrincipales" app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_registrar"
            android:hint="@string/btn_registrar"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_sinopsis" app:layout_constraintEnd_toEndOf="@+id/txt_sinopsis"
            app:layout_constraintStart_toStartOf="@+id/txt_sinopsis" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>